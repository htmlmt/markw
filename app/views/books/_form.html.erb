
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, :class => "tinymce", :rows => 10, :cols => 30 %>
    <%= tinymce :forced_root_block => '' %>
  </div>
  <div class="field">
    <%= f.label :front_page_summary %><br>
    <%= f.text_area :front_page_summary, :class => "tinymce", :rows => 10, :cols => 30 %>
    <%= tinymce :forced_root_block => '' %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label "Featured on homepage?" %><br>
    <%= f.check_box :featured %>
  </div>
  <%= f.fields_for :praises do |builder| %>
    <%= render 'praise_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "add praise", f, :praises %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
