<fieldset>
  <br/>
  <hr/>
  <br/>

  <%= f.label :quotation %><br />
  <%= f.text_area :quotation, :class => "tinymce", :rows => 10, :cols => 30 %><br />
  <%= tinymce :forced_root_block => '' %>
  <%= f.label :source %><br />
  <%= f.text_area :source, :class => "tinymce", :rows => 2, :cols => 30 %><br />
  <%= tinymce :forced_root_block => '' %>
  <%= f.check_box :featured %>
  <%= f.label "Featured on homepage?" %><br><br>
  <%= f.check_box :_destroy, class: 'hidden_field' %>
  <%= f.label :_destroy, "Remove praise?", class: 'remove_fields' %>
  <br/>
  <hr/>
  <br/>
</fieldset>
<script type="text/javascript">
  tinyMCE.init({
    selector: '.tinymce'
  });
</script>